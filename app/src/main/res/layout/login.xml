<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#28BEEE"
    android:orientation="vertical">

    <TextView
        android:id="@+id/AppSignText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 이름 등 상징"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"/>

    <EditText
        android:id="@+id/IDEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="70dp"
        android:background="@color/white"
        android:hint="  아이디 입력"
        app:layout_constraintTop_toBottomOf="@+id/AppSignText"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/PassWordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="70dp"
        android:background="@color/white"
        android:hint="  비밀번호 입력"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/LogInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   계정 로그인"
        android:textSize="14dp"
        android:textStyle="bold"
        android:width="300dp"
        android:height="60dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/kakaobtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:src="@drawable/kakaobtn"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 계정이 없다면"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:backgroundTint="#28BEEE"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="65dp" />

        <Button
            android:id="@+id/signButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textColor="@color/white"
            android:backgroundTint="#28BEEE"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            style="?android:attr/borderlessButtonStyle"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>






</androidx.appcompat.widget.LinearLayoutCompat>