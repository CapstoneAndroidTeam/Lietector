<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />



    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="01012345678"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/mainview"
        app:layout_constraintBottom_toTopOf="@id/type"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="기관 사칭형"
        android:textStyle="italic"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber"
        app:layout_constraintBottom_toBottomOf="@id/reportContent"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/reportContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="hello"
        android:textStyle="italic"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintBottom_toBottomOf="@id/mainview"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        android:layout_marginLeft="20dp"/>


    <ImageButton
        android:id="@+id/editbtn"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/edit"
        android:clickable="true"
        android:textColor="#E76363"
        android:background="#00ff0000"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/mainview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>