<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mainview"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/Q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Q"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/mainview"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/QTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 제목"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/mainview"
        app:layout_constraintLeft_toRightOf="@id/Q"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>


    <ImageButton
        android:id="@+id/editbtn"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/edit"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/mainview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/story"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:text="개시물 내용"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/QTitle"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        app:layout_constraintRight_toRightOf="@id/mainview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:src="@drawable/line"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/story"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        app:layout_constraintRight_toRightOf="@id/mainview"/>

    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="A"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/Answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        android:text="답변을 기다리는 중"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/A"
        app:layout_constraintRight_toRightOf="@id/mainview"
        app:layout_constraintBottom_toBottomOf="@id/mainview"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>