<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F0F0F0">


    <TextView
        android:id="@+id/TopRedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의심이 가는"
        android:textColor="#E76363"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/TopBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번호를 검색해보세요."
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="330dp"
        android:layout_height="50dp"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:queryHint="번호를 입력하세요." />

    <Button
        android:id="@+id/CenterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보이스피싱 진단하기\n방금 내가 받은 전화\n의심된다면?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361"
        android:height="150dp"
        android:width="300dp"
        android:backgroundTint="#28BEEE"
        android:textSize="19dp"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        />

    <Button
        android:id="@+id/CommunityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:height="120dp"
        android:width="120dp"
        android:backgroundTint="@color/white"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintHorizontal_bias="0.20" />

    <Button
        android:id="@+id/ReportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고하기"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:height="120dp"
        android:width="120dp"
        android:backgroundTint="@color/white"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintHorizontal_bias="0.80" />

    <Button
        android:id="@+id/PreventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대처방법"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:height="120dp"
        android:width="120dp"
        android:backgroundTint="@color/white"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.2" />

    <Button
        android:id="@+id/MyPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:height="120dp"
        android:width="120dp"
        android:backgroundTint="@color/white"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.8" />



</androidx.constraintlayout.widget.ConstraintLayout>