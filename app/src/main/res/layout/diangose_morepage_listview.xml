<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mainview"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/suspiciousOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="순위"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/mainview"
        app:layout_constraintTop_toTopOf="@id/mainview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/suspiciousWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의심 단어"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/suspiciousOrder"
        app:layout_constraintTop_toTopOf="@id/mainview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>