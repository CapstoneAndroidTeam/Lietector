<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="알림 설정">
        <SwitchPreference
            android:key="push_notification"
            android:title="PUSH 수신 동의"/>

        <SwitchPreference
            android:key="reply_notification"
            android:title="댓글 알림 수신 동의"/>

        <SwitchPreference
            android:key="email_ad"
            android:title="이메일 광고 수신 동의"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="기능 설정">
            <ListPreference
                android:entries="@array/disclosure"
                android:entryValues="@array/disclosure"
                android:key="disclosure_list"
                android:summary="공개 범위를 설정하세요"
                android:title="정보 공개 설정"/>

            <ListPreference
                android:entries="@array/ban"
                android:entryValues="@array/ban"
                android:key="ban_list"
                android:summary="차단 방법을 설정하세요"
                android:title="의심 전화 차단 방법"/>

            <SwitchPreference
                android:key="marketing"
                android:title="선택적 마케팅 동의 여부"/>
    </PreferenceCategory>
</PreferenceScreen>